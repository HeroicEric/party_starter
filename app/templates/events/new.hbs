<h1>Start a Party</h1>

<div class='row'>
  <div class='small-12 medium-6 small-centered columns'>
    <form>
      <fieldset>
        <legend>Location</legend>
        <div>
          <label>Name</label>
          {{input type="text" value=location.name}}
        </div>
        <div>
          <label>Street Address</label>
          {{input type="text" value=location.streetAddress}}
        </div>
        <div>
          <label>City</label>
          {{input type="text" value=location.city}}
        </div>
        <div>
          <label>State</label>
          {{input type="text" value=location.state}}
        </div>
        <div>
          <label>Zip Code</label>
          {{input type="text" value=location.zipCode}}
        </div>
      </fieldset>

      <fieldset>
        <legend>Event Details</legend>
        <div>
          <label>Title</label>
          {{input type="text" value=title}}
        </div>

        <div>
          <label>Theme</label>
          {{input type="text" value=theme}}
        </div>

        <div>
          <label>RSVP Minimum</label>
          {{input type="text" value=rsvpMin}}
        </div>
      </fieldset>

      <button {{action 'save'}}>Save</button>
      <button {{action 'cancel'}}>Cancel</button>
    </form>
  </div>
</div>
